<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list["Title"] %></td>
        <td><%= list["Description"] %></td>
        <td><%= link_to 'Show', list_path(list["ID"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
